block header
  +page-header()
    +e.wrapper--login
      +b.UL.social-panel
        +e.LI.item
          +e.A.link(href='', title='Facebook') Facebook
            +icon('fb', '16', '16')
        +e.LI.item
          +e.A.link(href='', title='Twitter') Twitter
            +icon('tw', '16', '16')
        +e.LI.item
          +e.A.link(href='', title='Pinterest') Pinterest
            +icon('pn', '16', '16')
        +e.LI.item
          +e.A.link(href='', title='Vkontakte') Vkontakte
            +icon('vk', '16', '16')
        +e.LI.item
          +e.A.link(href='', title='Google+') Google+
            +icon('gl', '16', '16')
        +e.LI.item
          +e.A.link(href='', title='Behance') Behance
            +icon('be', '16', '16')
        +e.LI.item
          +e.A.link(href='', title='Instagram') Instagram
            +icon('ig', '16', '16')

      +b.UL.user-panel
        +e.LI.item--login
          +e.A.link(href='', title='Sign In') Sign In

      +b.UL.lang-panel
        +e.LI.item--en
          +e.A.link(href='', title='Enlish') Eng

    +e.wrapper--nav
      +logo('/')
        img(src='img/logo.png', alt='Pasco logo', width='91', height='18')
      +main-nav('0')
      +b.UL.main-sub-nav
        +e.LI.item--search
          +e.A.link(href='', title='Search') Search
            +icon('search', '18', '18')
        +e.LI.item--vaforite
          +e.A.link(href='', title='Vaforite') Vaforite
            +icon('fav', '20', '19')
        +e.LI.item--cart
          +e.A.link(href='', data-tooltip='7', title='Cart') Cart
            +icon('cart', '20', '20')

block content
  +hero()

    - var n = 0;
      +b.swipe.__swipe#hero-slider
        +e.UL.wrapper
          while n++ < 3
            +e.LI.item
              +promo('5 Ways milllennials can start building their future today', 'inspiration', 'tag2')

                +caption('Henry Little', 'img/rSuiu_Hr.jpg', 'April 28, 2016', '10:15', '2016-04-28')

                  +b.comments-counter.__comments-counter
                    +e.A.link--comments(href='', data-comments-count='28') Comments
                    +e.A.link--likes(href='', data-likes-count='07') Likes

        +e.BUTTON.button--left(onclick='mySwipe.prev()') Left
        +e.BUTTON.button--right(onclick='mySwipe.next()') Right

